body, p, h1, h2, h3, h4, h5, h6, ul, li, form {
  margin: 0;
  padding: 0;
  line-height: 18px;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 12px;
}

p, h2, h3, h4, h5, h6 {
  margin-bottom: 18px;
}

.clear {
  clear: both;
}

#container {
  margin: 0 auto;
  padding: 0 20px;
  font-size: 1.3em;
  display: block;
}

#header {
  margin-top: 1%;
  padding: 10px 0 25px 0;
  border-bottom: 2px solid;
  width: 100%;
}

#header h1 {
  float: left;
  font-size: 32px;
  line-height: 32px;
}

#middle {
  width: 100%;
}

#footer {
  width: 100%;
  height: 108px;
}

.box {
  margin: 5px;
  padding: 0;
  font-size: 11px;
  border-bottom: 1px solid;
  width: 100%
}

.box img {
  display: block;
  width: 100%;
  max-width: none;
}

.box h2 {
  display: block;
  font-weight: bold;
}

#logo {
  float: left;
}

#logo, #logo img {
  min-width: 20%;
  max-width: 90%;
}

#navigation {
  float: right;
}

#navigation ul {
  list-style-type: none;
}

#navigation ul li {
  float: left;
  padding-right: 50px;
}

#navigation ul li strong {
  font-size: 16px;
}

#navigation ul li strong em {
  display: block;
  font-size: 12px;
  font-style: normal;
}

.nav_images {
  display: block;
  height: 150px;
}

.left {
  float: left;
  width: 20%;
  margin: 0px 1% 0px 0px;
}

#footer {
  width: 100%;
  height: 108px;
}

#answer {
  margin-top: 10px;
}

a:link, a:visited {
  text-decoration: none;
  outline: none;
  color: black;
}

// CSS for when the browser width becomes the 1280px
@media screen and (max-width:1280px) {
  #navigation, #header h1 {
    float: none;
  }
}

// CSS for when the browser width becomes the CodeFooController::MIN_WIDTH
@media screen and (max-width:<%= CodeFooController::MIN_WIDTH %>px) {
  #header {
    text-align: center;
  }

  #logo, #navigation {
    display: inline-block;
  }

  #navigation, #navigation ul li, #logo, .left, #header h1 {
    float: none;
  }

  #navigation, #header h1 {
    margin-top: 10px;
  }

  #navigation ul li {
    display: inline;
  }

  #navigation ul li strong {
    display: inline;
    padding: 0;
  }

  .left, #navigation ul li strong em {
    display: none;
  }

  .nav_images {
    display: none;
  }
}
